extends layout

block styles
  link(rel='stylesheet' href='/stylesheets/form.css')

block content 
  h2= title
  form(method='post')
    label(for='name') Name:
    input(
      type='text'
      id='name'
      name='name'
      required
      value!=(category ? category.name : '')
    )

    label(for='description') Description:
    textarea(
      id='description'
      name='description'
    ) !{category ? category.description : ''}

    button(type='submit') Submit

  if errors
    ul
      each error in errors 
       li= error.msg