extends layout

block styles
  link(rel='stylesheet' href='/stylesheets/form.css')
  script(defer src='/javascripts/product_form.js')

block content
  h2= title

  form(method='post' enctype="multipart/form-data") 
    label(for='name') Name:
    input(
      type='text' 
      id='name' 
      name='name' 
      value=(product ? product.name : '') 
      required
    )

    label(for='description') Description:
    textarea(
      id='description'
      name='description'
      rows='5'
      required
    ) #{product ? product.description : ''}

    div.numeric-fields-wrapper
      div
        label(for='price') Price:
        input(
          type='number'
          id='price'
          name='price'
          step='.01'
          value=(product ? product.price : '')
        )
      div
        label(for='number_in_stock') Number in stock:
        input(
          type='number'
          id='number_in_stock'
          name='number_in_stock'
          value=(product ? product.number_in_stock : '')
        )

    if product && product.image.url
      div
        img(src=product.image.url, alt="Product image")
      div
        input(
          type='checkbox'
          id='remove_image'
          name='remove_image'
          value='true'
        )
        |  
        label(for='remove_image') Remove product image

    label(for='product_image') 
      if product.image.file_id
        | Change product image
      else
        | Choose product image
    input(type='file' name='product_image' id='product_image')

    if categories
      fieldset 
        legend Product categories
        each category in categories
          div 
            input(
              type='checkbox'
              id=category._id 
              name='categories' 
              value=category._id
              checked=category.checked
            )
            |  
            label(for=category._id) #{category.name}
    button(type='submit') submit
    
  if errors
    ul
      for error in errors
        li!= error.msg